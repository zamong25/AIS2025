# Delphi Trading System 환경 변수 설정 예제
# 이 파일을 .env로 복사하여 실제 값을 입력하세요

# Binance API Keys (필수)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
# Testnet API Keys (선택)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Google Gemini API Key (필수)
GOOGLE_API_KEY=your_google_api_key_here

# Discord Webhook URL (필수)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Trading Settings (선택 - 기본값 있음)
USE_TESTNET=false
USE_QUANT_V3=true
DEFAULT_LEVERAGE=10
MAX_LEVERAGE=20

# Risk Management (선택 - 기본값 있음)
MAX_POSITION_SIZE_PERCENT=0.3
DAILY_LOSS_LIMIT_PERCENT=0.05
EMERGENCY_STOP_LOSS_PERCENT=0.1

# System Settings (선택 - 기본값 있음)
TIMEZONE=Asia/Seoul
LOG_LEVEL=INFO
ENABLE_HEARTBEAT=true

# Position Adjustment Settings (선택 - 기본값 있음)
ENABLE_POSITION_ADJUSTMENT=false
ADJUSTMENT_MIN_PROFIT=2.0
ADJUSTMENT_MAX_TOTAL_SIZE=0.4
ENABLE_TRIGGERS=true